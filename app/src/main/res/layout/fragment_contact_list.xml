<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="start">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:text="@string/your_emergency_contacts"
        android:textColor="@color/dark_pink"
        android:textSize="28sp"
        android:textAlignment="center"
        android:textStyle="bold" />

    <!-- Contacts List Container -->
    <LinearLayout
        android:id="@+id/contactsContainer"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/layout_bg"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_gravity="center"
        android:gravity="center">

        <TextView
            android:id="@+id/no_contacts_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_contacts_yet"
            android:textSize="18sp"
            android:textColor="@android:color/darker_gray"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:indeterminate="true"
            android:visibility="gone" />

        <!-- RecyclerView for Contact List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/contactsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:scrollbars="vertical"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/refresh_contacts"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:background="@drawable/icon_bg"
        android:baselineAlignBottom="true"
        android:contentDescription="@string/refresh_contacts"
        android:padding="6dp"
        android:src="@drawable/refresh_icon"
        app:tint="@android:color/white"
        tools:ignore="DuplicateSpeakableTextCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/add_contact_button"
        android:layout_width="250dp"
        android:layout_height="65dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_bg_2"
        android:layout_marginTop="10dp"
        android:text="@string/add_contact"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>
